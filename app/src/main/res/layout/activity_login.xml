<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_design"
    tools:context=".LoginActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/framelauout"
        android:indeterminateTint="#1a09d6"
        android:layout_marginTop="-7dp"/>
    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#000"
        android:fontFamily="@font/syne_regular"
        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="15dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="10dp"
        android:fontFamily="@font/interregular"
        android:hint="Votre adresse mail..."
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#606060"
        android:textColorHint="#606060" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:fontFamily="@font/interregular"
        android:hint="Votre mot de passe..."
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#606060"
        android:textColorHint="#606060" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="#DDF42D"
        android:fontFamily="@font/syne_regular"
        android:text="Se connecter"
        android:textColor="#000"
        android:textFontWeight="600" />

    <TextView
        android:id="@+id/loginRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:fontFamily="@font/syne_regular"
        android:text="Pas encore de compte ? S’enregistrer"
        android:textColor="#606060"

        />
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="J'ai oublié mon mot de passe"
        android:textColor="#606060"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/syne_regular"

        />


    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/syne_regular"
        android:textColor="#606060"
        android:text="J'ai oublié mon mot de passe."
        />


</LinearLayout>