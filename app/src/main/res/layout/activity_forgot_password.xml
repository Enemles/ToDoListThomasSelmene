<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_design"
        android:orientation="vertical"
        tools:context=".LoginActivity">

        <TextView
            android:id="@+id/resetPassTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/syne_regular"
            android:text="RÃ©initialiser le mot de passe"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/resetPassEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:drawableStart="@drawable/ic_account"
            android:drawablePadding="10dp"
            android:fontFamily="@font/interregular"
            android:hint="Votre adresse mail..."
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#606060"
            android:textColorHint="#606060" />

        <Button
            android:id="@+id/resetPassBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:backgroundTint="#DDF42D"
            android:fontFamily="@font/syne_regular"
            android:text="Se connecter"
            android:textColor="#000"
            android:textFontWeight="600" />

        <TextView
            android:id="@+id/resetPassBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/syne_regular"
            android:text="Retour"
            android:textColor="#606060" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>